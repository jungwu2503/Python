# slicing = create a substring by extracting elements
#           from another string indexing[] or slice()
#           [start:stop:step]

name = "Bor Cold"
firstName = name[:3]
lastName = name[4:]
funkyName = name[::3]
reversedName = name[::-1]

print(firstName)
print(lastName)
print(funkyName)
print(reversedName)

website1 = "http://google.com"
website2 = "http://wikipedia.com"

slice = slice(7,-4)

print(website1[slice])
print(website2[slice])
